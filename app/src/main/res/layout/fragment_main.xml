<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eric.mdbweather.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:text="City"
        android:textSize="36sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:text="@string/json_currently_time"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/city_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/current_date"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/current_date" />

    <TextView
        android:id="@+id/current_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="39dp"
        android:text="@string/json_currently_temp"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/current_time"
        app:layout_constraintRight_toRightOf="@+id/current_time"
        app:layout_constraintTop_toBottomOf="@+id/current_time"
        app:layout_constraintHorizontal_bias="0.558" />

    <TextView
        android:id="@+id/current_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/json_hourly_summary"
        android:textSize="24sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/current_temp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/current_temp"
        android:layout_marginTop="103dp"
        app:layout_constraintTop_toBottomOf="@+id/current_temp" />

    <TextView
        android:id="@+id/current_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textSize="30sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/city_name" />

    <TextView
        android:id="@+id/current_rain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rain"
        android:textSize="24sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/current_temp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/current_temp"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/current_temp"
        app:layout_constraintHorizontal_bias="0.506" />

    <TextView
        android:id="@+id/poweredBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Powered By Dark Sky"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/summaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:textSize="35dp"
        android:layout_marginTop="16dp"
        android:textStyle="italic"
        android:textAllCaps="true"
        android:textColor="#fafafa"
        app:layout_constraintTop_toBottomOf="@+id/temperatureText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/temperatureText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/temperatureText"
        app:layout_constraintHorizontal_bias="0.494" />

    <TextView
        android:id="@+id/temperatureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50.00 F"
        android:textSize="70dp"
        android:textColor="#ffffff"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moonView"
        app:layout_constraintHorizontal_bias="0.503" />

    <TextClock
        android:visibility="gone"
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@+id/sunView"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/moonView" />

    <com.thbs.skycons.library.CloudFogView
        android:visibility="gone"
        android:layout_width="383dp"
        android:layout_height="249dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#000000"
        app:bgColor = "#ffffff"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cloudFogView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp" />

    <com.thbs.skycons.library.CloudHvRainView
        android:visibility="gone"
        android:layout_width="385dp"
        android:layout_height="247dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#000000"
        app:bgColor = "#ffffff"
        android:id="@+id/cloudHvRainView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp" />

    <com.thbs.skycons.library.CloudMoonView
        android:visibility="gone"
        android:layout_width="384dp"
        android:layout_height="252dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#000000"
        app:bgColor = "#ffffff"
        android:id="@+id/cloudMoonView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintTop_toTopOf="@+id/cloudFogView"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/temperatureText" />

    <com.thbs.skycons.library.CloudRainView
        android:visibility="gone"
        android:layout_width="384dp"
        android:layout_height="249dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#000000"
        app:bgColor = "#ffffff"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:id="@+id/cloudRainView"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cloudSnowView"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/temperatureText"
        app:layout_constraintVertical_bias="1.0" />

    <com.thbs.skycons.library.CloudSnowView
        android:visibility="gone"
        android:layout_width="385dp"
        android:layout_height="247dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#000000"
        app:bgColor = "#ffffff"
        android:id="@+id/cloudSnowView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />

    <com.thbs.skycons.library.CloudSunView
        android:visibility="gone"
        android:layout_width="379dp"
        android:layout_height="253dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#000000"
        app:bgColor = "#ffffff"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:id="@+id/cloudSunView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cloudSnowView"
        android:layout_marginTop="0dp" />

    <com.thbs.skycons.library.CloudThunderView
        android:visibility="gone"
        android:layout_width="356dp"
        android:layout_height="251dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#000000"
        app:bgColor = "#ffffff"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/cloudThunderView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp" />

    <com.thbs.skycons.library.CloudView
        android:visibility="gone"
        android:layout_width="384dp"
        android:layout_height="247dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:bgColor = "#ffffff"
        android:id="@+id/cloudView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp" />

    <com.thbs.skycons.library.MoonView
        android:layout_width="381dp"
        android:layout_height="249dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#FFFFFF"
        app:bgColor = "#6EA4BF"
        android:id="@+id/moonView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <com.thbs.skycons.library.SunView
        android:visibility="gone"
        android:layout_width="377dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#000000"
        app:bgColor = "#ffffff"
        android:id="@+id/sunView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp" />

    <com.thbs.skycons.library.WindView
        android:visibility="gone"
        android:layout_width="384dp"
        android:layout_height="251dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#000000"
        app:bgColor = "#ffffff"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/windView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/requiredText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Powered by Dark Sky"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        android:textColor="#000000"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/rainIng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is it gonna rain?"
        android:textColor="#fafafa"
        android:textSize="15dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/summaryText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/summaryText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/summaryText" />


</android.support.constraint.ConstraintLayout>
